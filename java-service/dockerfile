# Multi-stage build para optimizar el tama침o final
FROM eclipse-temurin:17-jdk AS builder

WORKDIR /app

# Copiar archivos de configuraci칩n de Maven
COPY pom.xml .
COPY .mvn .mvn
COPY mvnw .
COPY mvnw.cmd .

# Copiar c칩digo fuente
COPY src src

# Ejecutar Maven build
RUN chmod +x mvnw && \
    ./mvnw clean package -DskipTests

# Stage final con solo el runtime
FROM eclipse-temurin:17-jre

WORKDIR /app

# Copiar el JAR desde el stage de build
COPY --from=builder /app/target/java-service-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8080

# Comando para ejecutar la aplicaci칩n
CMD ["java", "-jar", "app.jar"]
